<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox  alignment="CENTER" styleClass="background" prefHeight="540.0" prefWidth="600.0" spacing="20"
       xmlns:fx="http://javafx.com/fxml/1"
       fx:controller="controller.ExploreTeamsController"
       >
    
    <ImageView>
        <image>
            <Image url="@/view/NBA_Back.jpg"/>
        </image>
    </ImageView>

    <HBox alignment="CENTER" spacing="400">
        <Button fx:id="exploreTeamsButton" text="TeamsMenu" onAction="#handleExploreTeams"/>
        <Button fx:id="viewPlayersButton" text="View Players" onAction="#handleViewPlayers"/>
    </HBox>

    <Button fx:id="exitButton" text="Close" onAction="#handleExit"/>

    <stylesheets>
        <URL value="@style.css"/>
    </stylesheets>
</VBox>

