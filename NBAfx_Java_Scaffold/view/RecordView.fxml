<VBox styleClass="background"  alignment="CENTER" prefHeight="300" prefWidth="500" spacing="20" xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="controller.RecordController" >
   
    <Label text="Season Record"/>

    <TableView fx:id="recordTableTV">
        <columns>
            <TableColumn text="Round" fx:id="roundCol"/>
            <TableColumn text="Game" fx:id="gameCol"/>
            <TableColumn text="Winning Team" fx:id="winCol"/>
            <TableColumn text="Losing Team" fx:id="loseCol"/>
        </columns>
    </TableView>

    <Button text="Close" fx:id="closeButton" onAction="#handleClose"/>

    <stylesheets>
        <URL value="@style.css"/>
    </stylesheets>
</VBox>
