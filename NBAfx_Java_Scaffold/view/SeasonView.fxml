<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox  alignment="CENTER" styleClass="background" prefHeight="450.0" prefWidth="350.0" spacing="20" xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="controller.SeasonController"   >
    <ImageView fitWidth="350.0" fitHeight="170.0" >
        <image>
            <Image url="@/view/NBA_Back.jpg"/>
        </image>
    </ImageView>

    <Button fx:id="roundButton" text="Round" onAction="#handleRound"/>
    <Button fx:id="currentButton" text="Current" onAction="#handleCurrent"/>
    <Button fx:id="gameButton" text="Game" onAction="#handleGame"/>
    <Button fx:id="resultButton" text="Result" onAction="#handleResult"/>
    <Button fx:id="closeButton" text="Close" onAction="#handleClose"/>    
    
        
    <stylesheets>
        <URL value="@style.css"/>
    </stylesheets>
    
</VBox>
